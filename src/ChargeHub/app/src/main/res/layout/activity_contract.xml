<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/TextViewKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result" />

        <TextView
            android:id="@+id/tv_status"
            style="@style/TextViewValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Select smart contract function" />

        <Button
            android:id="@+id/btn_check_authorize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check authorize" />

        <Button
            android:id="@+id/btn_register_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register node" />

        <Button
            android:id="@+id/btn_get_rate_charging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get rate charging" />

        <Button
            android:id="@+id/btn_update_rate_charging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update rate charging" />

        <Button
            android:id="@+id/btn_charging_switches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charging switches" />

        <Button
            android:id="@+id/btn_charge_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charge on" />

        <Button
            android:id="@+id/btn_charge_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charge off" />


    </LinearLayout>

</LinearLayout>