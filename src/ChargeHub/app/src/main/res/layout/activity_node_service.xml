<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <include layout="@layout/action_bar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Node address" />

            <TextView
                android:id="@+id/tv_node_eth_address"
                style="@style/TextViewValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="0x00f0f...fba" />

            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service" />

            <RadioGroup
                android:id="@+id/rgrp_service_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/rbtn_charging"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_charging"
                    style="@style/TextViewValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="Charging" />

                <RadioButton
                    android:id="@+id/rbtn_parking"
                    style="@style/TextViewValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="Parking" />

                <RadioButton
                    android:id="@+id/rbtn_wifi"
                    style="@style/TextViewValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="Wifi" />

            </RadioGroup>

            <TextView
                style="@style/TextViewKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount $" />

            <EditText
                android:id="@+id/et_amount"
                style="@style/TextViewValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_payment_credit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use credit card" />

            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment status" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transaction hash" />

                    <TextView
                        android:id="@+id/tv_payment_hash"
                        style="@style/TextViewValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="0x234" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <TextView
                style="@style/TextViewKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell order (used for exchange purposes)" />

            <TextView
                android:id="@+id/tv_sell_order_hash"
                style="@style/TextViewValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="txHash" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_service_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start" />

                <Button
                    android:id="@+id/btn_service_stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stop" />

                <Button
                    android:id="@+id/btn_service_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status" />

            </LinearLayout>

            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service status" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:contentPadding="4dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <TextView
                        style="@style/TextViewKey"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:text="Started"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/tv_service_started_at"
                        style="@style/TextViewValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        tools:targetApi="lollipop"
                        tools:text="14 oct 2019" />

                    <TextView
                        style="@style/TextViewKey"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:text="Time" />

                    <TextView
                        android:id="@+id/tv_service_time_at"
                        style="@style/TextViewValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        tools:text="2 min sec" />

                    <TextView
                        style="@style/TextViewKey"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:text="Stopped" />

                    <TextView
                        android:id="@+id/tv_service_stopped_at"
                        style="@style/TextViewValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        tools:text="2 min sec" />

                    <TextView
                        style="@style/TextViewKey"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:text="Remained" />

                    <TextView
                        android:id="@+id/tv_service_remained"
                        style="@style/TextViewValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_columnWeight="1"
                        tools:text="2 min sec" />

                </GridLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>