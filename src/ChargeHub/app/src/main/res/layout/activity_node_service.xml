<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <include layout="@layout/action_bar_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/TextViewKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Node address" />

        <TextView
            android:id="@+id/tv_node_eth_address"
            style="@style/TextViewValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="0x00f0f...fba" />

        <Button
            android:id="@+id/btn_payment_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use credit card" />

        <TextView
            style="@style/TextViewKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment status" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:contentPadding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction hash" />

                <TextView
                    android:id="@+id/tv_payment_hash"
                    style="@style/TextViewValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="0x234" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <TextView
            style="@style/TextViewKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell order (used for exchange purposes)" />

        <TextView
            android:id="@+id/tv_sell_order_hash"
            style="@style/TextViewValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="txHash" />

        <Button
            android:id="@+id/btn_start_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start wifi service" />

        <Button
            android:id="@+id/btn_stop_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop wifi service" />

        <Button
            android:id="@+id/btn_service_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service status" />

        <TextView
            style="@style/TextViewKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service status" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:contentPadding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service started" />

                <TextView
                    android:id="@+id/tv_service_started_at"
                    style="@style/TextViewValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="14 oct 2019" />

                <TextView
                    style="@style/TextViewKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time" />

                <TextView
                    android:id="@+id/tv_service_time_at"
                    style="@style/TextViewValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="2 min sec" />

                <TextView
                    style="@style/TextViewKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stopped" />

                <TextView
                    android:id="@+id/tv_service_stopped_at"
                    style="@style/TextViewValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="2 min sec" />

                <TextView
                    style="@style/TextViewKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remained" />

                <TextView
                    android:id="@+id/tv_service_remained"
                    style="@style/TextViewValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="2 min sec" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>